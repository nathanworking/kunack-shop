{% set additionalClasses = (class ?? false) ? " " ~ class : "" %}
<picture>
     <source data-srcset="{{ photoDisplay.srcsetWidthWebP(1200) }}" sizes="100vw" type="image/webp"/>
     <img data-src="{{ photoDisplay.placeholderImage(1200) }}" data-srcset="{{ photoDisplay.srcsetWidth(1200) }}" sizes="100vw" class="lazyload {{ additionalClasses }}" {% for width,height in photoDisplay.variantHeights %} width="{{width}}" height="{{height}}" {% endfor %}/>
</picture>
